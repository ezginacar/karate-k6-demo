<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Konsol Appender -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <!-- Dosya Appender -->
    <appender name="ALL_LOGS_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>target/karate-reports/all-logs.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>target/karate-reports/all-logs.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level [%logger{36}] [%X{feature}:%X{scenario}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Karate’nin print() ve genel logları konsolda da görünsün -->
    <logger name="com.intuit.karate" level="DEBUG" additivity="false">
        <appender-ref ref="ALL_LOGS_FILE"/>
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="com.intuit.karate.core" level="DEBUG" />

    <!-- HTTP logları sadece dosyada, konsola hiç gitmesin -->
    <logger name="com.intuit.karate.http" level="OFF" additivity="false">
        <appender-ref ref="ALL_LOGS_FILE"/>
    </logger>

    <!-- Root sadece INFO -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ALL_LOGS_FILE"/>
    </root>
</configuration>